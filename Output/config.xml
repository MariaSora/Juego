			<anim x ="71" y ="122" width ="20" height ="29"/>
			<anim x ="101" y ="122" width ="20" height ="29"/>
		</climbAnim>

		  <climbIdleAnim loop ="false" speed ="1.0">
			  <anim x ="6" y ="122" width ="20" height ="29"/>
		  </climbIdleAnim>

	  </animations>
	  </player>
		  
    <item x="416" y="512" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="384" y="352" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="200" y="672" texturepath="Assets/Textures/goldCoin.png"/>
