			  <anim x ="72" y ="295" width ="22" height ="32"/>
			  <anim x ="102" y ="295" width ="22" height ="32"/>
			  <anim x ="134" y ="295" width ="22" height ="32"/>
			  <anim x ="167" y ="295" width ="22" height ="32"/>
